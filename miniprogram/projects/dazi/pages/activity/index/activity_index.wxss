@import "../../../style/skin.wxss";

.main {
	padding: 0rpx !important;
}


.list {
	width: 100%;
	padding: 10rpx 10rpx;
	display: flex;
	flex-direction: column;
}


.list .item {
	width: 100%;
	display: flex;
	background-color: #fff;
	padding: 20rpx 20rpx 25rpx;
	overflow: hidden;
	position: relative;
	border-radius: 20rpx;
	border-top-right-radius: 50rpx;
	border-bottom-left-radius: 50rpx;
	margin-bottom: 30rpx;
	position: relative;
	overflow: hidden;
}

.list .item .left {
	margin-right: 25rpx;
	position: relative;
}


.list .item .mark {
	position: absolute;
	bottom: 14rpx;
	right: 4rpx;
	z-index: 9;
	background-color: rgba(253, 201, 7, .8);
	color: #000;
	font-size: 22rpx;
	padding: 10rpx 10rpx;
	border-radius: 100% 89% 100% 100% / 90% 99% 92% 25%;
}

.list .item .left>image {
	width: 220rpx;
	height: 220rpx;
	border-radius: 14rpx;
	border-top-right-radius: 50rpx;
	border-bottom-left-radius: 30rpx;
}

.list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}


.list .item .right .title {
	width: 100%;
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 20rpx;
	margin-top: 10rpx;
}


.list .item .right .detail {
	width: 100%;
	display: flex;
	flex-direction: column;
	font-size: 26rpx;
	color: #999;
}

.list .item .right .detail .line {
	width: 100%;
	margin-top: 5rpx;
}


.list .item .right .detail .line .num {
	margin-left: 4rpx;
	margin-right: 4rpx;
}

.list .item .status {
	position: absolute;
	bottom: 0;
	right: 0;
	font-size: 24rpx !important;
	background-color: #f2f2f2;
	color: #999;
	padding: 6rpx 25rpx;
	border-top-left-radius: 10rpx;
	border-bottom-right-radius: inherit;
	z-index: 9;
}

.list .item .status.comm {
	background-color: var(--projectColorLight);
	color: #444;
}